    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\main.js",
            "stopOnEntry": false, 
            "args": [ ], 
            "cwd": "${workspaceRoot}", 
            "preLaunchTask": null, 
            "runtimeExecutable": "${workspaceRoot}/node_modules/electron/dist/electron.exe", 
            "runtimeArgs": [
                "--nolazy"
            ], 
            "env": {
                "NODE_ENV": "development"
            }, 
            //"externalConsole": false, 
            "sourceMaps": false
            //"outDir": null
        }
    ]
}